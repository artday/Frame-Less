{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6" style="max-width:500px">
            <form action="{{ route('auth.signin') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="text" name="email" class="form-control{{ errors.email ? ' is-invalid' : '' }}">
                    {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" name="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}">
                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-check">
                    <label for="remember" class="form-check-label">
                        <input id="remember" type="checkbox" name="remember" class="form-check-input"> Remember me
                    </label>
                </div>
                <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.token }}">
                <button type="submit" class="btn btn-primary mt-3">Sign in</button>
            </form>
        </div>
    </div>
{% endblock %}