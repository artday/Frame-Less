{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="{{ route('auth.register') }}" method="post">
                <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.token }}">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" type="text" name="name" class="form-control{{ errors.name ? ' is-invalid' : '' }}" placeholder="e.g. John Smith" value="{{ old.name }}">
                    {% if errors.name %}
                        <div class="invalid-feedback">
                            {{ errors.name | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input id="email" type="text" name="email" class="form-control{{ errors.email ? ' is-invalid' : '' }}" placeholder="e.g. your_email@domain.com" value="{{ old.email }}">
                    {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" name="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}">
                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password_confirmation">Password confirmation</label>
                    <input id="password_confirmation" type="password" name="password_confirmation" class="form-control{{ errors.password_confirmation ? ' is-invalid' : '' }}">
                    {% if errors.password_confirmation %}
                        <div class="invalid-feedback">
                            {{ errors.password_confirmation | first }}
                        </div>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary mt-3">Sign in</button>
            </form>
        </div>
    </div>
{% endblock %}